<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyleBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyleLarge" parent="TextStyleBase">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/aoboshi_one</item>
    </style>

    <style name="TextStyleMedium" parent="TextStyleBase">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/aoboshi_one</item>
    </style>

    <style name="TextStyleRegular" parent="TextStyleBase">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/aoboshi_one</item>
    </style>
</resources>