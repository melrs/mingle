<resources>
    <!-- Base application theme -->
    <style name="Theme.Mingle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background</item>
        <!-- Error color. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOutline">@color/outline</item>>
        <item name="android:textAppearance">@style/BaseTextAppearance</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <!-- Base text appearance -->
    <style name="BaseTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/aoboshi_one</item>

    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Mingle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>